<div class="form-container">
 
<h2 class="user">Create A New Project</h2>

<%= form_for @project do |f| %>

  <% if @project.errors.any? %>
    <h3>Errors:</h3>
    <% @project.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

  <%= f.hidden_field :user_id, :value => "#{current_user.id}" %>
  <%= f.hidden_field :published, :value => false %>

	<div class="field">
    <%= f.label :name %>
		<%= f.text_field :name, placeholder: "Enter your project's name" %>
	</div>

  <div class="field">
    <%= f.label :tagline %>
    <%= f.text_field :tagline, placeholder: "Enter a tagline for your project" %>
  </div>

  <div class="field">
    <%= f.label :about %>
    <%= f.text_area :about, cols: 30, rows: 5, placeholder: "Tell the world what your project's about." %>
  </div>

  <div class="field">
    <%= f.label :goal %>
    <%= f.number_field :goal, placeholder: "USD amount you'd like to raise for your project?" %>
  </div>

  <div class="field">
    <%= f.label :faq %>
    <%= f.text_area :faq, cols: 30, rows: 5, placeholder: "What are some Frequently Asked Questions about your project?" %>
  </div>  

  <div class="field">
    <%= f.label :risk_and_challenges %>
    <%= f.text_area :risk_and_challenges, cols: 30, rows: 5, placeholder: "What are some risks and challenges that your project can face?" %>
  </div>

  <div class="field">
    <%= f.label :deadline %> 
    <p>Set a deadline for when your project's funding period ends.</p>
    <%= f.date_field :deadline %>
  </div>

  <div class="field">
    <%= f.label :category %> 
    <p>Select a category that your project fits into.</p>
    <%= f.collection_select :category_ids, Category.all, :id, :name %><br>
  </div>

  <div class="field">
    <%= f.label "Create a New Category"%>
    <%= f.fields_for :categories, @project.categories.build do |category_fields| %>
    <%= category_fields.text_field :name, id: 'Name', placeholder: 'Enter a name for your new category' %>
    <% end %>
  </div>

  <%= f.submit "Next" %>

<% end %>

</div>

<%= javascript_include_tag "application", "data-turbolinks-track" => "reload" %>