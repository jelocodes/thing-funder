      <% if project.published == true %>
    
        <div class="col-sm-12 col-md-4 col-lg-4">
        <div class="column">
          <!-- Post-->
          <div class="post-module">
          <!-- Thumbnail-->
          <div class="thumbnail">
            <% if project.image.exists? %>
              <%= image_tag project.image.url %>
            <% else %>
              <img src="https://placeimg.com/640/480/tech">
            <% end %>
          </div>
          <!-- Project Content-->
          <div class="post-content">
            <div class="category">
              <% if !!project.categories %>
                <% project.categories.each do |category| %>
                  <p><%= category.name %></p>
                <% end %>
              <% else %>
                <p>Unclassified</p>
              <% end %>
            </div>
            <h1 class="title"><%= project.name %></h1>
            <% if project.user == current_user %>
              <h2 class="sub_title">By You</h2>
            <% else %> 
              <h2 class="sub_title">By <%= project.user.username %></h2>
            <% end %>
            <div class="progress">
              <div class="progress-bar project" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:<%=num = rand(100)%>%"><%=num%>% funded</div>
            </div>
            <p class="description"><%= project.about %></p>
            <div class="post-meta"><span class="timestamp"><i class="fa fa-clock-">o</i> <%= (project.deadline - Date.today).to_i %> days left </span> <span><%= project.comments.size %> comments</span><br>
              <% if project.user == current_user %>
                <%= link_to "EDIT", edit_project_path(project), :class => "btn blue" %> 
                <%= link_to "DELETE", project_path(project), data: { confirm: 'Are you sure?' }, method: :delete, :class => "btn blue" %> 
              <% else %> 
                <%= link_to "FUND", project_path(project), :class => "btn blue" %> 
              <% end %>
            </div>
          </div>
          </div>
        </div>
        </div>

      <% end %>