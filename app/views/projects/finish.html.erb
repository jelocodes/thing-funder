<div class="form-container">
 
<h2 class="user">Set Reward Tiers</h2>

<%= form_for @project do |f| %>

  <% if @project.errors.any? %>
    <h3 class="field_error">Oops! Errors found. Please fill in rewards fields to save project.</h3>
  <% end %>

  <div class="reward-tiers">  

    <div class="first">
      <%= f.fields_for :rewards do |reward| %>

      <%= render partial: 'rewards_form', locals: { :f => f, :reward => reward } %>

      <% end %>
    </div> 

  </div>

  <%= f.submit "Create Project" %>

<% end %>

</div>

<%= javascript_include_tag "application", "data-turbolinks-track" => "reload" %>