<div id="myCarousel" class="carousel slide" data-ride="carousel">
	<!-- Indicators -->
	<ol class="carousel-indicators">
    	<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    	<li data-target="#myCarousel" data-slide-to="1"></li>
    	<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>

 	<!-- Wrapper for slides -->
	<div class="carousel-inner container-fluid">

    	<div class="item active">
      	<img src="https://images.unsplash.com/photo-1438109491414-7198515b166b?q=80&fm=jpg&s=cbdabf7a79c087a0b060670a6d79726c" alt="Photography">
      	<div class="carousel-caption">
      		<h2>Fund your photography</h2>
      		<p>Let the world help you share your vision.</p>
      	</div>
    	</div>

    	<div class="item">
      	<img src="/2.jpg" alt="Filming">
      	<div class="carousel-caption">
      		<h2>Fund your music</h2>
      		<p>Tap the crowd to get your voice out there.</p>
      	</div>
    	</div>

    	<div class="item">
      	<img src="/1.jpg" alt="Teamwork" style="width:100%">
      	<div class="carousel-caption">
      		<h2>Fund your thing</h2>
      		<p>Whatever it is, fund and get funded with ThingFunder!</p>
      	</div>
    	</div>

	</div>

 	<!-- Left and right controls -->
  	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
    	<span class="glyphicon glyphicon-chevron-left"></span>
    	<span class="sr-only">Previous</span>
  	</a>
  	<a class="right carousel-control" href="#myCarousel" data-slide="next">
    	<span class="glyphicon glyphicon-chevron-right"></span>
    	<span class="sr-only">Next</span>
  	</a>
</div>

<div class="projects">
  <h2 class="project_title">Projects</h2>
  <div id="sort-button" class="container">
    <div class="row">
      <div class="col-sm">
        <%= button_to "NEWEST PROJECTS", {:action => "index"}, params: {:sort => "newest"}, :class => "btn blue", :method => :get %> 
      </div>
      <div class="col-sm">
        <%= button_to "MOST POPULAR PROJECTS", {:action => "index"}, params: {:sort => "popular"}, :class => "btn blue", :method => :get %>       
      </div>
      <div class="col-sm">
        <%= button_to "TIME RUNNING OUT!", {:action => "index"}, params: {:sort => "time_running_out"}, :class => "btn blue", :method => :get %> 
      </div>
    </div>
<!--     <%= button_to "MOST POPULAR PROJECTS", {action: "new"}, {class: "btn blue"} %>
    <%= button_to "TIME RUNNING OUT!", {action: "new"}, {class: "btn blue"} %>  --> 
  </div>
  <br/>
  <div class="row">

    <% if @projects.empty? %>
      <h3 class="project_title">No Projects Found</h3>
    <% end %>

    <% @projects.all.uniq.each do |project| %>

      <%= render partial: 'projects', locals: { :project => project } %>

    <% end %>

    </div>
  </div>


